<%# view.html.erb â€” clean, proxy-safe, no login POST %>
<% if host && port %>
  <div class="card">
    <div class="card-body">
      <p>
        Your app is running on <strong><%= host %>:<%= port %></strong>.
      </p>
      <a href="/node/<%= host %>/<%= port %>/" target="_blank" class="btn btn-primary">
        <i class="fa fa-eye"></i> Connect to Hugging (Inter)Face
      </a>
    </div>
  </div>
<% else %>
  <div class="alert alert-danger">
    Could not determine connection information. Please contact support.
  </div>
<% end %>

